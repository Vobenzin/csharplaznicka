@using Common.DTO
@model CartDTO

<h1>My cart</h1>

@if (Model.Items.Count == 0)
{
    <p>Cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Unit price</th>
                <th>Amount</th>
                <th>Subtotal</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model.Items)
            {
                <tr>
                    <td>@i.ProductName</td>
                    <td>@i.UnitPrice</td>
                    <td>
                        <form asp-controller="Cart" asp-action="Update" method="post" class="d-flex gap-2">
                            <input type="hidden" name="cartItemPublicId" value="@i.PublicId" />
                            <input name="amount" type="number" min="0" value="@i.Amount" style="width:90px;" />
                            <button type="submit" class="btn">Update</button>
                        </form>
                    </td>
                    <td>@i.Subtotal</td>
                    <td>
                        <form asp-controller="Cart" asp-action="Remove" method="post">
                            <input type="hidden" name="cartItemPublicId" value="@i.PublicId" />
                            <button type="submit" class="btn">Remove</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <p><b>Total:</b> @Model.TotalPrice</p>

    <form asp-controller="Cart" asp-action="Clear" method="post">
        <button type="submit" class="btn">Clear cart</button>
    </form>

    <form asp-controller="Order" asp-action="Checkout" method="post">
        <button type="submit" class="btn">Checkout</button>
    </form>
}
