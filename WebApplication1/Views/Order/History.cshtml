@using Common.DTO
@model IEnumerable<OrderListDTO>

<h1>Purchase history</h1>

@if (!Model.Any())
{
    <p>No orders yet.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Date</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var o in Model)
            {
                <tr>
                    <td>@o.CreatedAtUtc</td>
                    <td>@o.TotalPrice</td>
                    <td class="text-end">
                        <a asp-action="Detail" asp-route-publicId="@o.PublicId" class="btn btn-primary btn-sm">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
